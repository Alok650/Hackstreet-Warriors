<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form >
			<h1>Create Account</h1>

			<input type="text" placeholder="Name" autocomplete="off" id="signupName"/>
			<input type="email" placeholder="Email" autocomplete="off" id="signupEmail"/>
			<input type="number" placeholder="Age" autocomplete="off" id="age"/>
			<input type="email" placeholder="Mobile Number" autocomplete="off" id="mobile"/>
			<input type="password" placeholder="Password" autocomplete="off" id="signupPassword"/>
			<input type="password" placeholder="Re-type Password" autocomplete="off" id="rePassword"/>
			<!-- <input type="file" multiple="false" accept="image/*" id=finput onchange="upload()"> -->
			<!-- <label for="import" class="btn" style="cursor: pointer;margin:0px;">Upload ID</label> -->
