			<!-- <select id="lang">
				<option value='eng' selected> English </option>
			</select> -->
			<% console.log("hi") %>
		<div id="recognizedText"></div>
		<!-- <div id="recognizedGender"></div> -->
		
		<input type="text" placeholder="Gender" autocomplete="off" id="signupGender" value="" disabled>

			<button id="signupButton">Sign Up</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form >
			<h1>Sign in</h1>

			<input type="email" placeholder="Email or Mobile Number" autocomplete="off" id="loginEmail"/>
			<input type="password" placeholder="Password" autocomplete="off" id="loginPassword"/>
			<br>
			<button id="loginButton">Sign In</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>

